{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"strict": true,
		"lib": [
			"ESNext"
		],
		"noEmit": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist",
		"test"
	]
}
